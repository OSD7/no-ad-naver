// manifest.json
{
  "manifest_version": 3,
  "name": "Ad Blocker",
  "version": "1.0",
  "description": "광고 차단을 위한 익스텐션",
  "permissions": ["activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }]
}